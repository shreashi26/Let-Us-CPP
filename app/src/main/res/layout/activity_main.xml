<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhakoo.letusc.MainActivity"
    android:background="#000000">

    <Button
        android:id="@+id/ques"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#fcbf07"
        android:onClick="quesClick"
        android:text="Questions"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/compiler"
        android:layout_alignLeft="@+id/tutorial"
        android:layout_alignStart="@+id/tutorial" />

    <Button
        android:id="@+id/tutorial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#fcbf07"
        android:onClick="tutorialClick"
        android:text="Tutorial"
        android:layout_marginTop="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/compiler"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#fcbf07"
        android:layout_marginTop="71dp"
        android:onClick="compilerClick"
        android:text="Compiler"
        android:layout_below="@+id/tutorial"
        android:layout_alignLeft="@+id/tutorial"
        android:layout_alignStart="@+id/tutorial" />
</RelativeLayout>
